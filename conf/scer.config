/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running Saccharomyces cerevisiae
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

    Use as follows:
        nextflow run denovogenes.nf -profile scer,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Scer profile'
    config_profile_description = 'Saccharomyces cerevisiae dataset'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    //taxids      = "/store/EQUIPES/BIM/MEMBERS/paul.roginski/PIPELINE/data/SCER_NCBI/Saccharomyces_taxids.tsv"
    gendir      = "/store/EQUIPES/BIM/MEMBERS/paul.roginski/PIPELINE/data/SCER_NCBI/"
    tree        = "/store/EQUIPES/BIM/MEMBERS/paul.roginski/PIPELINE/data/SCER_NCBI/Saccharomyces_species.nwk"
    focal       = "Scer_NCBI"
    //genera_db   = "/store/EQUIPES/BIM/MEMBERS/paul.roginski/diamonddb/NR_DB/"
    //genera_out  = "/store/EQUIPES/BIM/MEMBERS/paul.roginski/PIPELINE/data/SCER_NCBI/559292_gene_ages.tsv"
    trgs        = "/store/EQUIPES/BIM/MEMBERS/paul.roginski/PIPELINE/data/SCER_NCBI/TRGs.txt"
    trg_rank    = null
    blastdir    = "/store/EQUIPES/BIM/MEMBERS/paul.roginski/PIPELINE/data/SCER_NCBI/blast_out/"
    strategy    = 1
    synteny     = true
    outdir      = "SCER_NCBI_results"
}